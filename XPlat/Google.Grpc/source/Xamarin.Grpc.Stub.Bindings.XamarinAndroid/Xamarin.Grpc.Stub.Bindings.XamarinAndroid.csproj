<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
    <PropertyGroup>
        <AssemblyName>Xamarin.Grpc.Stub</AssemblyName>

        <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
        <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
        <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
        <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
        <AndroidResgenFile>Resources\Resource.designer.cs</AndroidResgenFile>

        <TargetFrameworks>MonoAndroid81</TargetFrameworks>
        <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
         
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>        
        <Description>Bindings for Google GRPC Stub package</Description>
    </PropertyGroup>

    <PropertyGroup>
        <IsBindingProject>true</IsBindingProject>
        <AndroidClassParser>class-parse</AndroidClassParser>
    </PropertyGroup>

    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Xamarin.Grpc.Stub</PackageId>
        <PackageVersion>1.14.0.2</PackageVersion>
        <Title>Xamarin.Grpc.Stub</Title>
        <Summary>
            Google GRPC Stub bindings for Xamarin
        </Summary>
        <Description>
            Bindings for Google's GRPC Stub package
        </Description>
        <Owners>Microsoft</Owners>
        <Authors>Microsoft</Authors>
        <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
        <PackageLicenseUrl>
        https://go.microsoft.com/fwlink/?linkid=2009338
        </PackageLicenseUrl>
        <PackageProjectUrl>
        https://go.microsoft.com/fwlink/?linkid=2009337
        </PackageProjectUrl>
        <RepositoryUrl>
        https://go.microsoft.com/fwlink/?linkid=2009337            
        </RepositoryUrl>
        <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageReleaseNotes>
            transitive dependencies fixed
        </PackageReleaseNotes>
        <PackageTags>xamarin, android, bindings, google, grpc, stub </PackageTags>
        <PackOnBuild>true</PackOnBuild>
        <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>


    <ItemGroup>
        <TransformFile Include="Transforms\*.xml" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Additions\" />
      <Folder Include="Jars\" />
    </ItemGroup>
    <ItemGroup>
      <EmbeddedJar Include="..\..\externals\android\grpc-stub-1.14.0.jar">
        <Link>Jars\grpc-stub-1.14.0.jar</Link>
      </EmbeddedJar>
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\Xamarin.Grpc.Core.Bindings.XamarinAndroid\Xamarin.Grpc.Core.Bindings.XamarinAndroid.csproj" />
      <ProjectReference Include="..\Xamarin.Grpc.Context.Bindings.XamarinAndroid\Xamarin.Grpc.Context.Bindings.XamarinAndroid.csproj" />
    </ItemGroup>

</Project>