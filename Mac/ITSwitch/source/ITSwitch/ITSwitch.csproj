<Project Sdk="MSBuild.Sdk.Extras/2.0.54">

  <PropertyGroup>
    <TargetFramework>XamarinMac2.0</TargetFramework>
    <AssemblyName>ITSwitch</AssemblyName>
    <RootNamespace>ITSwitch</RootNamespace>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\ITSwitch.xml</DocumentationFile>
    <IPhoneResourcePrefix>Resources</IPhoneResourcePrefix>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Xamarin.Mac.ITSwitch</PackageId>
    <Title>ITSwitch for Xamarin.Mac</Title>
    <PackageDescription>ITSwitch is a simple and lightweight replica of iOS 7 UISwitch for macOS.</PackageDescription>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=865074</PackageProjectUrl>
    <PackageLicenseUrl>https://go.microsoft.com/fwlink/?linkid=865013</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageVersion>1.1.0</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\External-Dependency-Info.txt" Pack="True" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

</Project>
