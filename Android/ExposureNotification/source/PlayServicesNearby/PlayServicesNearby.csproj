<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid10.0</TargetFrameworks>
    <IsBindingProject>true</IsBindingProject>
    <AssemblyName>Xamarin.GooglePlayServices.Nearby.ExposureNotification</AssemblyName>
    <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
    <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
    <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
    <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
    <AndroidResgenFile>Resources\Resource.designer.cs</AndroidResgenFile>
    <RootNamespace>Android.Gms.Nearby</RootNamespace>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Xamarin.GooglePlayServices.Nearby.ExposureNotification</PackageId>
    <Title>Xamarin.Android Bindings for the play-services-nearby eap for Exposure Notifications</Title>
    <PackageDescription>Xamarin.Android Bindings for the play-services-nearby eap for Exposure Notifications</PackageDescription>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=865337</PackageProjectUrl>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageVersion>18.0.2-eap.4</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Transforms\*.xml" />
    <TransformFile Include="Transforms\*.xml" />
  </ItemGroup>

  <ItemGroup>
    <LibraryProjectZip Include="..\..\externals\play-services-nearby-18.0.2-eap.aar" Link="play-services-nearby.aar" />
    <None Include="..\..\License.md" Pack="true" PackagePath="LICENSE.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.GooglePlayServices.Base" Version="117.1.0-preview01" />
    <PackageReference Include="Xamarin.GooglePlayServices.Basement" Version="117.1.0-preview01" />
    <PackageReference Include="Xamarin.GooglePlayServices.Tasks" Version="117.0.0-preview01" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Mono.Android" />
  </ItemGroup>

</Project>
