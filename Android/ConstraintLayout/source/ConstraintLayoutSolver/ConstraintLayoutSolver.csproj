<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras/2.1.2">
  <PropertyGroup>
    <TargetFramework>MonoAndroid90</TargetFramework>
    <IsBindingProject>true</IsBindingProject>
    <AssemblyName>Xamarin.Android.Support.Constraint.Layout.Solver</AssemblyName>
    <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Xamarin.Android.Support.Constraint.Layout.Solver</PackageId>
    <Title>Xamarin Android Constraint Layout Solver</Title>
    <PackageDescription>Android Constraint Layout Solver C# bindings for Xamarin</PackageDescription>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=2105832</PackageProjectUrl>
    <PackageLicenseUrl>https://go.microsoft.com/fwlink/?linkid=2106031</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageVersion>2.0.1</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedJar Include="..\..\externals\constraint-layout-solver.jar">
      <Link>Jars\constraint-layout-solver.jar</Link>
    </EmbeddedJar>

     <None Include="..\..\External-Dependency-Info.txt" Pack="True" PackagePath="THIRD-PARTY-NOTICES.txt" />

     <TransformFile Include="Transforms\*.xml" />
  </ItemGroup>

</Project>
