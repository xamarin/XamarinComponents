<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid11.0</TargetFrameworks>
    <IsBindingProject>true</IsBindingProject>
    <AssemblyName>Xamarin.Google.Filament.Utils</AssemblyName>
    <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
    <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
    <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
    <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
    <AndroidResgenFile>Resources\Resource.designer.cs</AndroidResgenFile>
    <RootNamespace>Annotations</RootNamespace>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Xamarin.Google.Filament.Utils</PackageId>
    <Title>Google Filament for Xamarin.Android</Title>
    <PackageDescription>Xamarin.Android bindings for Google Filament Utils</PackageDescription>
    <Summary>Xamarin.Android bindings for Google Filament</Summary>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=2106537</PackageProjectUrl>
    <PackageLicenseUrl>https://go.microsoft.com/fwlink/?linkid=2106538</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageVersion>1.10.7</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.AndroidX.Annotation" Version="1.1.0" />
    <PackageReference Include="Xamarin.Kotlin.StdLib.Jdk8" Version="1.5.0" />
    <PackageReference Include="Karamunting.KotlinX.Coroutines.Android" Version="1.3.3" />
    <PackageReference Include="Karamunting.KotlinX.Coroutines.Core" Version="1.3.8" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Transforms\*.xml" />
    <TransformFile Include="Transforms\*.xml" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\externals\filament-utils-android.aar">
      <Link>filament-utils-android.aar</Link>
    </None>
    <None Include="..\..\External-Dependency-Info.txt" Pack="True" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

  <ItemGroup>
    <LibraryProjectZip Include="..\..\externals\filament-utils-android.aar" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Filament\Filament.csproj" />
    <ProjectReference Include="..\Gltfio\Gltfio.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Mono.Android" />
  </ItemGroup>

</Project>
