<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
  <PropertyGroup>
    <AssemblyName>Xamarin.CheckerFramework.Checker</AssemblyName>

    <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
    <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
    <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
    <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
    <AndroidResgenFile>Resources\Resource.designer.cs</AndroidResgenFile>

    <TargetFrameworks>MonoAndroid81</TargetFrameworks>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <IsBindingProject>true</IsBindingProject>
    <AndroidClassParser>class-parse</AndroidClassParser>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Xamarin.CheckerFramework.Checker</PackageId>
    <PackageVersion>2.11.1</PackageVersion>
    <Title>Xamarin.CheckerFramework.Checker</Title>
    <PackageDescription>Bindings for CheckerFramework Checker package</PackageDescription>
    <Owners>Microsoft</Owners>
    <Authors>Microsoft</Authors>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageLicenseUrl>https://go.microsoft.com/fwlink/?linkid=2102972</PackageLicenseUrl>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=2103038</PackageProjectUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageTags>xamarin, android, bindings, checkerframework, checker </PackageTags>
    <PackOnBuild>true</PackOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Additions\" />
    <Folder Include="Jars\" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedReferenceJar Include="..\..\externals\android\checker-2.11.1.jar">
      <Link>Jars\checker-2.11.1.jar</Link>
    </EmbeddedReferenceJar>
  </ItemGroup>
</Project>